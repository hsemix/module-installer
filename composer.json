{
    "name": "yuga/module-installer",
    "description": "A composer installer for Yuga Modules.",
    "type": "composer-installer",
    "keywords": ["yuga", "composer"],
    "homepage": "https://github.com/hsemix/module-installer",
    "license": "MIT",
    "authors": [
        {
            "name": "Hamid Semix",
            "email": "semix.hamidouh@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3",
        "composer-plugin-api": "^2.0",
        "symfony/filesystem": "~5.3",
        "symfony/finder": "~5.3"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "composer/installers": "~1.11",
        "phpunit/phpunit": "~9.5",
        "squizlabs/php_codesniffer": "~3.6"
    },
    "autoload": {
        "psr-4": {
            "Yuga\\Composer\\": "src"
        }
    },
    "extra": {
        "class": "Yuga\\Composer\\Installer\\Plugin"
    },
    "minimum-stability": "dev"
}